<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TabText" parent="Base.Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomSwitch" parent="TextStyle.Normal">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/checked_green_else_mercury_light</item>
    </style>

    <style name="Button" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextStyle.Normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/btn_normal_height</item>
        <item name="android:layout_width">@dimen/btn_normal_width</item>
    </style>

    <style name="RoundButton" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/btn_round_size</item>
        <item name="android:layout_width">@dimen/btn_round_size</item>
    </style>

    <style name="RoundButton.Translucent" parent="RoundButton">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_round_translucent</item>
    </style>

    <style name="InputLayout.Theme.Login" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:textColorPrimary">@color/bunker</item>
        <item name="colorControlNormal">@color/mercury</item>
        <item name="colorControlActivated">@color/mercury</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="android:textColorHint">@color/mercury</item>
    </style>

    <style name="EditText.Login" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/mercury</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditLayout">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/black_60</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomEditAppearance">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="colorControlActivated">@color/mercury</item>
        <item name="colorControlHighlight">@color/mercury</item>
    </style>

    <style name="CustomDivisor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/desert_storm</item>
    </style>

    <style name="SeparatorFlexible">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PaymentGridView">
        <item name="android:overScrollMode">never</item>
        <item name="android:nestedScrollingEnabled" tools:targetApi="lollipop">false</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TransactionStatusAppearance" parent="CardView">
        <item name="android:layout_width">4dp</item>
        <item name="cardBackgroundColor">@color/bamboo</item>
        <item name="cardCornerRadius">@dimen/radius_normal</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="SearchBoxAppearance" parent="EditText">
        <item name="android:lines">1</item>
        <item name="android:height">@dimen/height_custom_edit_text</item>
        <item name="android:background">@drawable/rounded_corner_light_gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/mercury</item>
        <item name="android:paddingStart">@dimen/spacing_x2</item>
        <item name="android:paddingEnd">44dp</item>
    </style>

    <style name="TransparentButton" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="UserProfileImage">
        <item name="roundImage">true</item>
        <item name="smoothTransition">true</item>
        <item name="imageSize">small</item>
        <item name="placeholder">@drawable/ic_user_default</item>
    </style>

    <style name="ProfileBackgroundImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="alphaIntensity">medium</item>
        <item name="placeholder">@drawable/default_poster_white</item>
        <item name="smoothTransition">true</item>
        <item name="blurIntensity">standard</item>
    </style>
</resources>
