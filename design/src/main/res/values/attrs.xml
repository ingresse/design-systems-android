<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />

    <declare-styleable name="CustomEditText">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="hint" format="string" />
        <attr name="hintColor" format="color" />
        <attr name="accentColor" format="color" />
        <attr name="isPassword" format="boolean" />
        <attr name="isLastField" format="boolean" />
        <attr name="showSuggestion" format="boolean" />
        <attr name="clearButton" format="boolean" />
        <attr name="actionLabel" format="string" />
        <attr name="capitalization" format="enum" >
            <enum name="uppercase" value="0"/>
            <enum name="capitalize" value="1"/>
            <enum name="lowercase" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomToolbar">
        <attr name="eventId" format="string" />
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="image" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomSpinner">
        <attr name="customHint" format="string" />
        <attr name="customHintColor" format="color" />
    </declare-styleable>

    <!-- BUTTONS -->
    <declare-styleable name="LoaderButton">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="tintColor" format="color" />
        <attr name="horizontalPadding" format="dimension" />
    </declare-styleable>

    <attr name="companyTheme" format="enum" >
        <enum name="primary" value="0"/>
        <enum name="accent" value="1"/>
    </attr>

    <attr name="style" format="enum" >
        <enum name="primary" value="0"/>
        <enum name="secondary" value="1"/>
        <enum name="confirm" value="2"/>
        <enum name="destructive" value="3"/>
        <enum name="crystal" value="4"/>
    </attr>

    <attr name="size" format="enum" >
        <enum name="small" value="0"/>
        <enum name="normal" value="1"/>
    </attr>

    <attr name="isThemed" format="boolean" />

    <declare-styleable name="DSButton">
        <attr name="size" />
        <attr name="style" />
        <attr name="companyTheme" />
        <attr name="isThemed" />
    </declare-styleable>

    <declare-styleable name="ThemedImageButton">
        <attr name="style" />
        <attr name="companyTheme" />
        <attr name="isThemed" />
    </declare-styleable>

    <attr name="firstColor" format="color" />
    <attr name="firstColorDark" format="color" />
    <attr name="firstColorLight" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="secondColorDark" format="color" />
</resources>