<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />

    <attr name="textInputType" format="enum">
        <enum name="none" value="0" />
        <enum name="text" value="1" />
        <enum name="email" value="2" />
        <enum name="personName" value="3" />
        <enum name="noSuggestions" value="4" />
        <enum name="phone" value="5" />
        <enum name="number" value="6" />
        <enum name="zipcode" value="7" />
        <enum name="date" value="8" />
    </attr>

    <attr name="formatType" format="enum">
        <enum name="none" value="0" />
        <enum name="phone" value="1" />
        <enum name="zipcode" value="2" />
        <enum name="cpf" value="3" />
        <enum name="cnpj" value="4" />
        <enum name="mixedCpfCnpj" value="5" />
        <enum name="creditCard" value="6" />
    </attr>

    <attr name="alignment">
        <flag name="center" value="17" />
        <flag name="center_horizontal" value="1" />
        <flag name="center_vertical" value="16" />
        <flag name="start" value="8388611" />
        <flag name="end" value="8388613" />
        <flag name="left" value="3" />
        <flag name="right" value="5" />
        <flag name="top" value="48" />
        <flag name="bottom" value="80" />
    </attr>

    <declare-styleable name="DSEditText">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="hint" format="string" />
        <attr name="hintColor" format="color" />
        <attr name="accentColor" format="color" />
        <attr name="editColor" format="color" />
        <attr name="isPassword" format="boolean" />
        <attr name="isLastField" format="boolean" />
        <attr name="showSuggestion" format="boolean" />
        <attr name="clearButton" format="boolean" />
        <attr name="actionLabel" format="string" />
        <attr name="customStyle" format="reference" />
        <attr name="uppercaseHint" format="boolean" />
        <attr name="disableError" format="boolean" />
        <attr name="textInputType" />
        <attr name="formatType" />
        <attr name="capitalization" format="enum">
            <enum name="uppercase" value="0" />
            <enum name="capitalize" value="1" />
            <enum name="lowercase" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DSSpinner">
        <attr name="customHint" format="string" />
        <attr name="customHintColor" format="color" />
    </declare-styleable>

    <!-- BUTTONS -->
    <declare-styleable name="LoaderButton">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="tintColor" format="color" />
        <attr name="horizontalPadding" format="dimension" />
    </declare-styleable>

    <attr name="buttonTheme" format="enum">
        <enum name="primary" value="0" />
        <enum name="accent" value="1" />
    </attr>

    <attr name="type" format="enum">
        <enum name="primary" value="0" />
        <enum name="secondary" value="1" />
        <enum name="confirm" value="2" />
        <enum name="destructive" value="3" />
        <enum name="crystal" value="4" />
    </attr>

    <attr name="size" format="enum">
        <enum name="small" value="0" />
        <enum name="normal" value="1" />
    </attr>

    <attr name="isThemed" format="boolean" />

    <declare-styleable name="DSButton">
        <attr name="size" />
        <attr name="type" />
        <attr name="buttonTheme" />
        <attr name="isThemed" />
        <attr name="alignment" />
    </declare-styleable>

    <declare-styleable name="DSImageButton">
        <attr name="type" />
        <attr name="buttonTheme" />
        <attr name="isThemed" />
    </declare-styleable>

    <declare-styleable name="DSButtonItem">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="withEndIcon" format="boolean" />
    </declare-styleable>

    <!-- IMAGE -->
    <attr name="imageSize" format="enum">
        <enum name="original" value="0" />
        <enum name="small" value="1" />
    </attr>

    <attr name="blurIntensity" format="enum">
        <enum name="zero" value="0" />
        <enum name="standard" value="1" />
    </attr>

    <attr name="alphaIntensity" format="enum">
        <enum name="zero" value="0" />
        <enum name="weak" value="1" />
        <enum name="medium" value="2" />
        <enum name="strong" value="3" />
    </attr>

    <declare-styleable name="DSImage">
        <attr name="imageSize" />
        <attr name="blurIntensity" />
        <attr name="alphaIntensity" />
        <attr name="roundImage" format="boolean" />
        <attr name="smoothTransition" format="boolean" />
        <attr name="placeholder" format="reference" />
        <attr name="adjustBounds" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DSProfileImage">
        <attr name="imageAbove" format="boolean" />
        <attr name="customImage" format="reference" />
        <attr name="alphaIntensity" />
    </declare-styleable>

    <!-- HEADER -->

    <attr name="headerType" format="enum">
        <enum name="simple" value="0" />
        <enum name="returnType" value="1" />
        <enum name="closeType" value="2" />
    </attr>

    <declare-styleable name="DSHeader">
        <attr name="headerType" />
        <attr name="title" format="string" />
        <attr name="description" format="string" />
    </declare-styleable>
</resources>