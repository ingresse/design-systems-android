<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">@dimen/height_text_view</item>
    </style>

    <!-- H1 -->
    <style name="TextStyle.H1" parent="TextStyle">
        <item name="android:textSize">@dimen/font_h1</item>
    </style>
    <style name="TextStyle.H1.Bold" parent="TextStyle.H1">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.H1.White" parent="TextStyle.H1">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.H1.Bold.White" parent="TextStyle.H1.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- H2 -->
    <style name="TextStyle.H2" parent="TextStyle">
        <item name="android:textSize">@dimen/font_h2</item>
    </style>
    <style name="TextStyle.H2.Bold" parent="TextStyle.H2">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.H2.White" parent="TextStyle.H2">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.H2.Bold.White" parent="TextStyle.H2.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- H3 -->
    <style name="TextStyle.H3" parent="TextStyle">
        <item name="android:textSize">@dimen/font_h3</item>
    </style>
    <style name="TextStyle.H3.Bold" parent="TextStyle.H3">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.H3.Bold.Black" parent="TextStyle.H3.Bold">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextStyle.H3.White" parent="TextStyle.H3">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.H3.Bold.White" parent="TextStyle.H3.Bold">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.H3.Bold.White.Center" parent="TextStyle.H3.Bold.White">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.H3.Bold.Gray" parent="TextStyle.H3.Bold">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.H3.Bold.Caps" parent="TextStyle.H3.Bold">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextStyle.H3.Bold.Caps.White" parent="TextStyle.H3.Bold.Caps">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.H3.Bold.Caps.Center" parent="TextStyle.H3.Bold.Caps">
        <item name="android:gravity">center</item>
    </style>

    <!-- H4 -->
    <style name="TextStyle.H4" parent="TextStyle">
        <item name="android:textSize">@dimen/font_h4</item>
    </style>
    <style name="TextStyle.H4.Dark" parent="TextStyle.H4">
        <item name="android:textColor">@color/oil</item>
    </style>

    <!-- NORMAL -->
    <style name="TextStyle.Normal" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="TextStyle.Normal.Caps" parent="TextStyle.Normal">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextStyle.Normal.No.Caps" parent="TextStyle.Normal">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextStyle.Normal.Bold" parent="TextStyle.Normal">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Normal.Bold.Caps" parent="TextStyle.Normal.Bold">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextStyle.Normal.Center" parent="TextStyle.Normal">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Normal.White" parent="TextStyle.Normal">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.Normal.Gray" parent="TextStyle.Normal">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.Normal.Center.Gray" parent="TextStyle.Normal.Center">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.Normal.Center.White" parent="TextStyle.Normal.Center">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.Normal.Center.White.Caps" parent="TextStyle.Normal.Center.White">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextStyle.Normal.LightGray" parent="TextStyle.Normal">
        <item name="android:textColor">@color/iron</item>
    </style>
    <style name="TextStyle.Normal.Red" parent="TextStyle.Normal">
        <item name="android:textColor">@color/ruby</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="TextStyle.Normal.Link" parent="TextStyle.Normal">
        <item name="android:textColor">@color/ocean</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Normal.Bold.White" parent="TextStyle.Normal.Bold">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.Normal.Bold.Gray" parent="TextStyle.Normal.Bold">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.Normal.Bold.Gray.Caps" parent="TextStyle.Normal.Bold.Gray">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- SMALL -->
    <style name="TextStyle.Small" parent="TextStyle">
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="TextStyle.Small.Bold" parent="TextStyle.Small">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Small.Center" parent="TextStyle.Small">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Small.White" parent="TextStyle.Small">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.Small.White.Center" parent="TextStyle.Small.White">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Small.LightGray" parent="TextStyle.Small">
        <item name="android:textColor">@color/santas_gray</item>
    </style>
    <style name="TextStyle.Small.LightGray.Center" parent="TextStyle.Small.LightGray">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Small.LightGray.Center.Caps" parent="TextStyle.Small.LightGray.Center">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextStyle.Small.Gray" parent="TextStyle.Small">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.Small.Bold.Gray" parent="TextStyle.Small.Gray">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.Small.Bold.Gray.Caps" parent="TextStyle.Small.Bold.Gray">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextStyle.Small.Link" parent="TextStyle.Small">
        <item name="android:textColor">@color/ocean</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.Small.Bold.White" parent="TextStyle.Small.Bold">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.Small.White.Center.Caps" parent="TextStyle.Small.White.Center">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- VERY SMALL -->
    <style name="TextStyle.VerySmall" parent="TextStyle">
        <item name="android:textSize">@dimen/font_very_small</item>
    </style>
    <style name="TextStyle.VerySmall.Bold" parent="TextStyle.VerySmall">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyle.VerySmall.White" parent="TextStyle.VerySmall">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle.VerySmall.Gray" parent="TextStyle.VerySmall">
        <item name="android:textColor">@color/mercury</item>
    </style>
    <style name="TextStyle.VerySmall.Dark" parent="TextStyle.VerySmall">
        <item name="android:textColor">@color/oil</item>
    </style>
    <style name="TextStyle.VerySmall.Dark.Center" parent="TextStyle.VerySmall.Dark">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.VerySmall.White.Center" parent="TextStyle.VerySmall.White">
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyle.VerySmall.Bold.White" parent="TextStyle.VerySmall.Bold">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>