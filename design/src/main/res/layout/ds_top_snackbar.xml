<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_snackbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/radius_enormous">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_snackbar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/spacing_x4" />

        <TextView
            android:id="@+id/lbl_top_snackbar"
            style="@style/DSTextStyle.Bold.T2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_x2"
            android:layout_marginTop="@dimen/spacing_x5"
            android:layout_marginEnd="@dimen/spacing_x4"
            android:layout_marginBottom="@dimen/spacing_x5"
            tools:text="Text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>