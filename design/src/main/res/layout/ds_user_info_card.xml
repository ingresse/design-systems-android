<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ds_user_info_card_bg"
    android:gravity="center">

    <com.ingresse.design.ui.image.DSProfileImage
        android:id="@+id/img_user_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/spacing_x3"
        android:layout_marginTop="@dimen/spacing_x5"
        android:layout_marginBottom="@dimen/spacing_x5"
        app:imageAbove="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_x3"
        android:layout_marginEnd="@dimen/spacing_x1_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_action"
        app:layout_constraintStart_toEndOf="@+id/img_user_profile"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lbl_user_name"
            style="@style/DSTextStyle.Bold.B1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mercury_70"
            tools:text="User Name" />

        <TextView
            android:id="@+id/lbl_user_email"
            style="@style/DSTextStyle.Regular.B2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_user_name"
            android:textColor="@color/mercury_70"
            tools:text="email@email.com" />

        <TextView
            android:id="@+id/lbl_user_address"
            style="@style/DSTextStyle.Regular.B2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_user_email"
            android:textColor="@color/mercury_70"
            android:visibility="gone"
            tools:text="Rua test, 123" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_action"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/spacing_x4"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>