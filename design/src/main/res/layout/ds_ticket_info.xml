<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/layout_ds_ticket_info">

    <TextView
        android:id="@+id/lbl_info"
        style="@style/DSTextStyle.Regular.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/iv_info_icon"
        android:lines="1"
        tools:text="Leia a descrição do ingresso"/>

    <ImageView
        android:src="@drawable/ic_info"
        android:id="@+id/iv_info_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>