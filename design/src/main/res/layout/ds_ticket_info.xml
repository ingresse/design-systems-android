<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ds_ticket_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lbl_info"
        style="@style/DSTextStyle.Regular.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_x4"
        android:layout_marginTop="@dimen/spacing_x2_3"
        android:layout_marginEnd="@dimen/spacing_x1"
        android:layout_marginBottom="@dimen/spacing_x2_3"
        android:layout_toStartOf="@id/iv_info_icon"
        android:lines="1"
        tools:text="Leia a descrição do ingresso" />

    <ImageView
        android:id="@+id/iv_info_icon"
        android:layout_width="@dimen/width_ticket_info_icon"
        android:layout_height="@dimen/height_ticket_info_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/spacing_x1"
        android:layout_marginEnd="@dimen/spacing_x3"
        android:layout_marginBottom="@dimen/spacing_x1"
        android:src="@drawable/ic_info" />

</RelativeLayout>