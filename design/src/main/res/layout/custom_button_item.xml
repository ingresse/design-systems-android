<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_big_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item"
        style="@style/TextStyle.Normal.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_x4"
        android:layout_marginEnd="@dimen/spacing_x1"
        android:layout_weight="1"
        android:lines="1"
        tools:text="Editar item" />

    <ImageView
        android:id="@+id/img_end"
        android:layout_width="@dimen/ic_normal"
        android:layout_height="@dimen/ic_normal"
        android:layout_marginStart="@dimen/spacing_x2"
        android:layout_marginEnd="@dimen/spacing_x2"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow" />

</LinearLayout>