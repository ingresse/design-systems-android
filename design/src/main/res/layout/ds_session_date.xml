<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:gravity="center"
    android:background="@drawable/ds_session_date_bg"
    android:id="@+id/layout_ds_session_date">

    <TextView
        android:id="@+id/lbl_week_day"
        style="@style/DSTextStyle.Bold.B2"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:background="@drawable/ds_session_date_weekday_bg"
        android:textColor="@color/white"
        android:gravity="center"
        android:lines="1"
        android:maxLength="3"
        tools:text="Sex"/>

    <TextView
        android:id="@+id/lbl_datetime"
        style="@style/DSTextStyle.Bold.B2"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/mercury_50"
        android:gravity="center"
        android:lines="1"
        tools:text="22 / Dez - 22:00"/>

</LinearLayout>